<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="classmanager.controller.FXMLPaymentsController">
   <children>
      <ComboBox fx:id="comboBoxStudents" layoutX="210.0" layoutY="14.0" prefHeight="25.0" prefWidth="180.0" promptText="Selecione um aluno" styleClass="combo-box" AnchorPane.leftAnchor="210.0" AnchorPane.topAnchor="20.0" />
      <TableView fx:id="tableViewLessons" layoutY="61.0" prefHeight="220.0" prefWidth="600.0" styleClass="list-view" AnchorPane.bottomAnchor="119.0" AnchorPane.topAnchor="61.0">
        <columns>
          <TableColumn fx:id="tableViewColumnDate" prefWidth="74.0" text="Data" />
          <TableColumn fx:id="tableViewColumnContent" prefWidth="312.0" text="Conteúdo" />
            <TableColumn fx:id="tableViewColumnSkills" prefWidth="191.0" text="Habilidades" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" layoutX="210.0" layoutY="281.0" prefHeight="40.0" prefWidth="180.0" spacing="30.0">
         <children>
            <Label text="Situação" />
            <Label fx:id="labelSituation" />
         </children>
      </HBox>
      <HBox layoutX="193.0" layoutY="346.0" spacing="15.0">
         <children>
            <Button fx:id="buttonPaid" mnemonicParsing="false" onAction="#handleButtonPaid" prefHeight="40.0" prefWidth="100.0" styleClass="add-button" text="Pago">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../style/icons/check-square.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="buttonNotPaid" mnemonicParsing="false" onAction="#handleButtonNotPaid" prefHeight="40.0" prefWidth="100.0" styleClass="remove-button" text="Não Pago">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../style/icons/x-square.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
         </children>
      </HBox>
      <Button fx:id="buttonBack" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleButtonBack" prefHeight="20.0" prefWidth="20.0" styleClass="back-button">
         <graphic>
            <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../style/icons/arrow-left.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
